<script>
$('.portfolio').masonry({
  itemSelector: '.portfolio-item',
  gutter: 10
});

$( ".portfolio-item img" )
.mouseover(function() {
  if ( $(this).data('gif') ) {
    var gif = $(this).data('gif');
    $( this ).attr( "src", gif );
  }
})
.mouseout(function() {
  var img = $(this).data('img');
  $( this ).attr( "src", img );
});

