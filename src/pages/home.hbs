{{>header}}

<main role="main" class="container">


  <div class="featured">

    <div class="jumbotron rounded row p-0">

      <div class="col-md-4 col-xs-12 pr-0 featured-image-container pl-0">
        <img class="br-4-0-0-4 maxh-350" src="/images/site/alex_bezuska_2018.png" alt="Alex Bezuska UX/UI Designer, Front End Developer, and Indie Game Developer Louisville Kentucky"/>
      </div>

      <div class="col-md-8 col-xs-12 featured-pad">

        <div class="row">

          {{#each home.aboutMe}}
          <a href="{{url}}" class="about-me-item col-md-6 col-sm-12">
            <div class="row">
              <div class="col-sm-4">
                <img class="icon" src="{{icon}}"/>
              </div>
              <div class="about-me-item-text col-sm-8">
                {{{text}}}
              </div>
            </div>
          </a>
          {{/each}}

        </div>
      </div>
    </div>


    <div class="row">

      <div class="col-sm-6 p-0">
        <div class="mr-20">
          <h2 class="funHeading">Work Experience</h2>
          {{#each home.work}}
          {{#if show}}
          <div class="resume-section-container">
            <div class="resume-section flip-right">
              <h3>{{title}}</h3>
              <strong>{{name}}</strong><br/>
              <em class="date">{{from}} &ndash; {{to}}</em>
              <p class="mb-15">{{description}}</p>
              <a href="{{url}}" target="_blank">Learn more about {{name}}</a>
            </div>
          </div>
          {{/if}}
          {{/each}}
        </div>
      </div>

      <div class="col-sm-6 p-0">
        <div class="ml-20">
          <h2 class="funHeading">Community Development</h2>
          {{#each home.community}}

          <div class="resume-section-container">
            <div class="resume-section flip-left">
              <h3>{{title}}</h3>
              <strong>{{name}}</strong><br/>
              <em class="date">{{from}} &ndash; {{to}}</em>
              <p class="mb-15">{{description}}</p>
              <a href="{{url}}" target="_blank">Learn more about {{name}}</a>
            </div>
          </div>

          {{/each}}
        </div>
      </div>

    </div>

    <div class="row mt-20">

      <div class="col-sm-4 p-0">
        <div class="mr-20">
          <h2 class="funHeading">Speaking</h2>
          {{#each home.speaking}}
          <div class="resume-section">
            <p class="mb-15">{{description}}</p>
          </div>
          {{/each}}
        </div>
      </div>

      <div class="col-sm-4 p-0">
        <div class="mr-20 ml-20">

          <h2 class="funHeading">Teaching</h2>
          {{#each home.teaching}}
          <div class="resume-section">
            <p class="mb-15">{{description}}</p>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="col-sm-4 p-0">
        <div class="ml-20">
          <h2 class="funHeading">Advocating</h2>
          {{#each home.advocating}}
          <div class="resume-section">
            <p class="mb-15">{{description}}</p>
          </div>
          {{/each}}
        </div>
      </div>

    </div>

  </main>
  {{>footer}}
